@model List<MovieViewModel>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Görsel</th>
            <th>Film Adı</th>
            <th>Puanı</th>
            <th>Çıkış Tarihi</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
            <td>@item.rank</td>
                <td><img src="@item.big_image" style="width:50px;height:50px;" /></td>
                <td>@item.title</td>
            <td>@item.rating</td>
            <td>@item.year</td>
            </tr>
        }
    </table>
</div>